{% extends "login.twig" %}
{% block head %}

	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>FCU選課系統</title>
	<link rel="stylesheet" type="text/css" href="{{ session.Css }}bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" href="{{ session.Css }}style.css">
{% endblock %}
{% block body %}

	<div class="d-flex justify-content-center align-items-center m-auto" style="height: 100vh;">
		<div class="login-box row bg-white align-items-center" id="index">
			<div class="col-md-6 justify-content-center d-flex">
				<img src="{{ session.Image }}/Login/img-01.png" alt="" class="w-75">
			</div>
			<div class="col-md-6">
				<p class="text-center pt-5 pt-md-0 pb-5" id="index-title">FCU選課系統</p>
				<div class="d-flex justify-content-center">
					<a class="btn" id="index-button" href="/login">去選課</a>
				</div>
			</div>
		</div>
	</div>

	<script src="{{ session.Js }}bootstrap/js/bootstrap.min.js"></script>
{% endblock %}
