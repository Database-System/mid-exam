{% extends "login.twig" %}
{% block head %}
	<title>FCU選課系統</title>
	<style>
		.wrap-login100 {
			width: 960px;
			background: #fff;
			border-radius: 10px;
			overflow: hidden;

			display: -webkit-box;
			display: -webkit-flex;
			display: -moz-box;
			display: -ms-flexbox;
			display: flex;
			flex-wrap: wrap;
			justify-content: space-between;
			padding-top: 40px 130px 33px 95px;
		}
	</style>
	{{ parent() }}
{% endblock %}
{% block body %}
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-pic js-tilt" data-tilt>
					<img src="{{ session.Image }}Login/img-01.png" alt="IMG">
				</div>

				<form action="/login" method="post">
					<span class="login100-form-title">
						{{ formTitle }}
					</span>
					<div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
						<input class="input100" type="text" name="user" placeholder="NID" style="visibility: hidden;">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true" style="visibility: hidden;"></i>
						</span>
					</div>
					<h1>&ensp;FCU選課系統</h1>
					<div class="wrap-input100 validate-input" data-validate="Password is required">
						<input class="input100" type="password" name="password" placeholder="Password" style="visibility: hidden;">
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true" style="visibility: hidden;"></i>
						</span>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							去選課
						</button>
					</div>

					<div class="text-center p-t-136">made by @</div>
				</form>

			</div>
		</div>
	</div>
	<script src="{{ session.Js }}jquery/jquery-3.7.1.min.js"></script>
	<script src="{{ session.Js }}Login/bootstrap/js/popper.js"></script>
	<script src="{{ session.Js }}Login/bootstrap/js/bootstrap.min.js"></script>
	<script src="{{ session.Js }}Login/select2/select2.min.js"></script>
	<script src="{{ session.Js }}Login/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({scale: 1.1})
	</script>
	<script src="{{session.Js}}Login/main.js"></script>


{% endblock %}
